{
  "manifest_version": 2,

  "name": "Guardian Snip.it",
  "description": "Snippets and clipping service for the Guardian users",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["http://www.guardian.co.uk/*"],
      "css": ["assets/css/style.css"],
      "js": [
        "assets/js/lib/jquery.min.js",
        "assets/js/lib/id.js",
        "assets/js/flyout.js",
        "assets/js/highlighter.js",
        "snipit.js"
      ]
    }
  ],
  "permissions": [
    "https://*.guardian.co.uk/"
  ],
  "web_accessible_resources": [
    "flyout.html"
  ]
}